generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id          String     @id @default(cuid())
  name        String
  phones      String     // JSON array for multiple phones
  email       String?
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  properties  Property[]
}

model Property {
  id                    String   @id @default(cuid())
  name                  String   // Alias o nombre de la propiedad
  address               String
  clientId              String
  propertyType          String   @default("casa") // casa, departamento, local, otro
  regime                String   @default("independiente") // independiente, condominio
  
  // Campos condominio (nullable)
  condoName             String?
  condoAdminName        String?
  condoAdminPhone       String?
  condoFee              String?
  
  // Campos generales
  notes                 String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  client                Client   @relation(fields: [clientId], references: [id])
  
  @@index([clientId])
  @@index([name])
  @@index([regime])
}
